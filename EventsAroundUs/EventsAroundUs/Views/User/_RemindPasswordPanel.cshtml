@using System.Web.Mvc.Html
@using MVCDemo.Common
@using MVCDemo.Models
@model UserToRemindPasswordViewModel

@{
    var modelType = Model.GetType();
    var remindPasswordEmailDisplayName = DisplayNameHelper.GetDisplayName(modelType.GetProperty(nameof(Model.RemindPasswordEmail)));
    var remindPasswordCodeDisplayName = DisplayNameHelper.GetDisplayName(modelType.GetProperty(nameof(Model.RemindPasswordCode)));
    var remindPasswordNewPasswordDisplayName = DisplayNameHelper.GetDisplayName(modelType.GetProperty(nameof(Model.RemindPasswordNewPassword)));
    var remindPasswordConfirmPasswordDisplayName = DisplayNameHelper.GetDisplayName(modelType.GetProperty(nameof(Model.RemindPasswordConfirmPassword)));
}

@using (@Html.BeginForm(null, null, FormMethod.Post, new { id = "frmRemindPasswordPanel", @class = "form-horizontal row-cols-gutter-10" }))
{
    <div class="col-sm-12">
        <div class="row row-cols-gutter-10">
            <div class="col-xs-12 vertical-gutter-10">
                <div class="title-container">Zmiana Hasła</div>
            </div>
        </div>
        <div class="row row-cols-gutter-10">
            <div class="col-xs-12 vertical-gutter-10">
                <div class="content-container outer-container-gutter-10">
                    <div class="form-group row-cols-gutter-10 vertical-gutter-0 vertical-margin-0">
                        <div class="col-xs-12 col-sm-3 vertical-gutter-10">
                            <div class="remindpassword_editor_label">
                                @Html.LabelFor(model => model.RemindPasswordEmail, remindPasswordEmailDisplayName + ": ", new { @for = "RemindPasswordEmail", @class = "control-label" })
                            </div>
                        </div>
                        <div class="col-xs-12 col-sm-3 vertical-gutter-10">
                            <div class="remindpassword_editor_field">
                                @Html.TextBoxFor(model => model.RemindPasswordEmail, new { @id = "txtRemindPasswordEmail", @class = "form-control", Name = "RemindPasswordEmail", @placeholder = remindPasswordEmailDisplayName + "..." })
                            </div>
                        </div>
                        <div class="col-xs-12 col-sm-6 vertical-gutter-10">
                            <div class="validation-indicator-container">
                                <div id="validation-indicator-content"></div>
                            </div>
                        </div>
                    </div>
                    <div class="form-group row-cols-gutter-10 vertical-gutter-0 vertical-margin-0">
                        <div class="col-xs-12 vertical-gutter-10">
                            <div>
                                <span id="lnkbtnSendRemindPasswordRequest" class="linklike">Wyślij Kod Weryfikacyjny</span>
                            </div>
                        </div>
                    </div>
                    <div class="form-group row-cols-gutter-10 vertical-gutter-0 vertical-margin-0">
                        <div class="col-xs-12 col-sm-3 vertical-gutter-10">
                            <div class="remindpassword_editor_label">
                                @Html.LabelFor(model => model.RemindPasswordCode, remindPasswordCodeDisplayName + ": ", new { @for = "RemindPasswordCode", @class = "control-label" })
                            </div>
                        </div>
                        <div class="col-xs-12 col-sm-3 vertical-gutter-10">
                            <div class="remindpassword_editor_field">
                                @Html.TextBoxFor(model => model.RemindPasswordCode, new { @id = "txtRemindPasswordCode", @class = "form-control", Name = "RemindPasswordCode", @placeholder = remindPasswordCodeDisplayName + "..." })
                            </div>
                        </div>
                        <div class="col-xs-12 col-sm-6 vertical-gutter-10">
                            <div class="validation-indicator-container">
                                <div id="validation-indicator-content"></div>
                            </div>
                        </div>
                    </div>
                    <div class="form-group row-cols-gutter-10 vertical-gutter-0 vertical-margin-0">
                        <div class="col-xs-12 col-sm-3 vertical-gutter-10">
                            <div class="remindpassword_editor_label">
                                @Html.LabelFor(model => model.RemindPasswordNewPassword, remindPasswordNewPasswordDisplayName + ": ", new { @for = "RemindPasswordNewPassword", @class = "control-label" })
                            </div>
                        </div>
                        <div class="col-xs-12 col-sm-3 vertical-gutter-10">
                            <div class="remindpassword_editor_field">
                                @Html.PasswordFor(model => model.RemindPasswordNewPassword, new { @id = "txtRemindPasswordNewPassword", @class = "form-control", Name = "RemindPasswordNewPassword", @placeholder = remindPasswordNewPasswordDisplayName + "..." })
                            </div>
                        </div>
                        <div class="col-xs-12 col-sm-6 vertical-gutter-10">
                            <div class="validation-indicator-container">
                                <div id="validation-indicator-content"></div>
                            </div>
                        </div>
                    </div>
                    <div class="form-group row-cols-gutter-10 vertical-gutter-0 vertical-margin-0">
                        <div class="col-xs-12 col-sm-3 vertical-gutter-10">
                            <div class="remindpassword_editor_label">
                                @Html.LabelFor(model => model.RemindPasswordConfirmPassword, remindPasswordConfirmPasswordDisplayName + ": ", new { @for = "RemindPasswordConfirmPassword", @class = "control-label" })
                            </div>
                        </div>
                        <div class="col-xs-12 col-sm-3 vertical-gutter-10">
                            <div class="remindpassword_editor_field">
                                @Html.PasswordFor(model => model.RemindPasswordConfirmPassword, new { @id = "txtRemindPasswordConfirmPassword", @class = "form-control", Name = "RemindPasswordConfirmPassword", @placeholder = remindPasswordConfirmPasswordDisplayName + "..." })
                            </div>
                        </div>
                        <div class="col-xs-12 col-sm-6 vertical-gutter-10">
                            <div class="validation-indicator-container">
                                <div id="validation-indicator-content"></div>
                            </div>
                        </div>
                    </div>
                    <div class="form-group row-cols-gutter-10 vertical-gutter-0 vertical-margin-0">
                        <div class="col-xs-12 vertical-gutter-10">
                            <div>
                                <input type="button" id="btnRemindPassword" class="btn btn-primary" value="Zmień Hasło" />
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
}